# Enterprise Data Quality Platform - Environment Configuration

# AWS Configuration
AWS_REGION=eu-west-2
AWS_PROFILE=default

# Project Configuration
PROJECT_PREFIX=enterprise
ENV_NAME=production
BILLING_EMAIL=enterprise-support@company.com
MONTHLY_BUDGET=5000

# Data Lake Configuration
RAW_BUCKET=enterprise-raw-{env}-{account}-{region}
PROCESSED_BUCKET=enterprise-processed-{env}-{account}-{region}
ANALYTICS_BUCKET=enterprise-analytics-{env}-{account}-{region}

# Data Quality Configuration
QUALITY_THRESHOLD=0.85
MAX_DATA_AGE_DAYS=30
VALIDATION_RETRY_COUNT=3

# Machine Learning Configuration
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=enterprise_data_quality
MODEL_REGISTRY_URI=s3://enterprise-models-{env}-{account}-{region}

# API Configuration (for future phases)
API_STAGE=prod
API_RATE_LIMIT=1000
API_TIMEOUT=30

# Monitoring Configuration
CLOUDWATCH_LOG_GROUP=/aws/enterprise-data-quality
ALERT_EMAIL=alerts@company.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Configuration
ENCRYPTION_KEY_ARN=arn:aws:kms:{region}:{account}:key/{key-id}
VPC_ID=vpc-xxxxxxxxx
SUBNET_IDS=subnet-xxxxxxxxx,subnet-yyyyyyyyy

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true
